<div class="search-results" id="search-results"></div>

<style>
  .search-results {
    display: none;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: min(90vw, 600px);
    max-height: 80vh;
    background: var(--color-bg-primary);
    border: 2px solid var(--color-border);
    border-radius: 1rem;
    box-shadow: 
      0 10px 20px rgba(0, 0, 0, 0.2),
      0 0 0 1000px rgba(0, 0, 0, 0.5);
    overflow-y: auto;
    z-index: 1000;
  }

  .search-results.active {
    display: block;
  }

  :global(.search-result-item) {
    display: block;
    padding: 1.5rem;
    text-decoration: none;
    border-bottom: 1px solid var(--color-border);
    transition: all 0.2s ease;
  }

  :global(.search-result-item:last-child) {
    border-bottom: none;
  }

  :global(.search-result-item:hover) {
    background: var(--color-bg-secondary);
  }

  :global(.result-header) {
    margin-bottom: 1rem;
  }

  :global(.result-category) {
    display: inline-block;
    font-size: 0.8rem;
    color: var(--color-accent);
    padding: 0.25rem 0.75rem;
    background: rgba(212, 163, 115, 0.1);
    border-radius: 1rem;
    margin-bottom: 0.75rem;
  }

  :global(.result-title) {
    margin-bottom: 0.5rem;
  }

  :global(.result-title-chinese) {
    display: block;
    font-family: var(--font-chinese);
    font-size: 1.2rem;
    color: var(--color-text-primary);
    margin-bottom: 0.25rem;
  }

  :global(.result-title-english) {
    display: block;
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  :global(.result-excerpt) {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    padding: 1rem;
    background: var(--color-bg-secondary);
    border-radius: 0.5rem;
    margin-top: 0.75rem;
  }

  :global(.result-excerpt mark) {
    background: rgba(212, 163, 115, 0.2);
    color: var(--color-accent);
    padding: 0.1em 0.2em;
    border-radius: 0.2em;
  }

  @media (max-width: 768px) {
    .search-results {
      width: 95vw;
      max-height: 90vh;
      top: 5vh;
      transform: translateX(-50%);
    }

    :global(.search-result-item) {
      padding: 1rem;
    }

    :global(.result-excerpt) {
      padding: 0.75rem;
      font-size: 0.85rem;
    }
  }
</style>