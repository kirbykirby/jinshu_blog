---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Book of Jin (晉書) Translation Archive - A comprehensive collection of translations and scholarly resources" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@400;700&family=Noto+Serif:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
:root {
  /* 温暖的深色背景 */
  --color-bg-primary: #1A1718;    /* 深咖啡黑 */
  --color-bg-secondary: #262223;  /* 暖灰褐色 */
  
  /* 文字颜色 - 暖色系 */
  --color-text-primary: #F5E6E8;  /* 温暖的米白 */
  --color-text-secondary: #B8A8AA; /* 柔和的暖灰 */
  
  /* 强调色 - 高雅的赭石色 */
  --color-accent: #D4A373;        /* 温暖的驼色 */
  
  /* 边框颜色 */
  --color-border: #332F30;        /* 深褐灰色 */
  
  /* 布局与字体同上 */
  --max-width: 65rem;
  --sidebar-width: 18rem;
  --font-chinese: 'Noto Serif SC', source-han-serif-sc, serif;
  --font-english: 'Crimson Pro', 'Times New Roman', serif;
}

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: var(--font-english);
    background: var(--color-bg-primary);
    color: var(--color-text-primary);
    line-height: 1.7;
  }

  body {
    margin: 0;
    min-height: 100vh;
  }

  main {
    margin-left: var(--sidebar-width);
    transition: margin-left 0.3s ease;
    padding-top: 2rem;
  }

  @media (max-width: 768px) {
    main {
      margin-left: 0;
      padding-top: 4rem;
    }
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 500;
    line-height: 1.2;
    margin: 2rem 0 1rem;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  a:hover {
    opacity: 0.8;
  }

  .content-section {
    background: var(--color-bg-secondary);
    padding: 2rem;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
    border: 1px solid var(--color-border);
  }

  /* Sidebar transitions */
  .sidebar-container {
    transition: transform 0.3s ease;
  }

  .sidebar-container.hidden {
    transform: translateX(-100%);
  }

  @media (max-width: 768px) {
    .sidebar-container.hidden {
      transform: translateX(-100%);
    }
  }
</style>